---
interface Props {
  variant?: 'default' | 'project' | 'blog';
  class?: string;
}

const {
  variant = 'default',
  class: className = '',
} = Astro.props;
---

<article class:list={['card', `card--${variant}`, className]}>
  <slot name="image" />
  <div class="card__content">
    <slot />
  </div>
</article>

<style>
  .card {
    display: flex;
    flex-direction: column;
    background-color: var(--color-surface);
    border-radius: var(--radius-xl);
    overflow: hidden;
    transition: var(--transition-base);
  }

  .card:hover {
    transform: translateY(-4px);
  }

  .card__content {
    display: flex;
    flex-direction: column;
    gap: var(--space-4);
    padding: var(--space-6);
  }

  /* Project card variant */
  .card--project .card__content {
    gap: var(--space-4);
  }

  /* Blog card variant */
  .card--blog .card__content {
    gap: var(--space-3);
  }
</style>
