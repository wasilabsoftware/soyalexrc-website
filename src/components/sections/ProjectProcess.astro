---
interface ProcessStep {
  title: string;
  description: string;
  image?: string;
}

interface Props {
  label?: string;
  title: string;
  subtitle?: string;
  steps: ProcessStep[];
  class?: string;
}

const {
  label = '// THE PROCESS',
  title,
  subtitle,
  steps,
  class: className = '',
} = Astro.props;
---

<section class:list={['project-process', className]}>
  <div class="project-process__container">
    <div class="project-process__header">
      <span class="project-process__label">{label}</span>
      <h2 class="project-process__title">{title}</h2>
      {subtitle && <p class="project-process__subtitle">{subtitle}</p>}
    </div>

    <div class="project-process__timeline">
      {steps.map((step, index) => (
        <div class="project-process__step">
          <div class="project-process__step-left">
            <div class="project-process__step-number">
              <span>{String(index + 1).padStart(2, '0')}</span>
            </div>
            {index < steps.length - 1 && (
              <div class="project-process__step-line"></div>
            )}
          </div>
          <div class:list={['project-process__step-content', { 'project-process__step-content--last': index === steps.length - 1 }]}>
            <h3 class="project-process__step-title">{step.title}</h3>
            <p class="project-process__step-desc">{step.description}</p>
            {step.image && (
              <div class="project-process__step-image">
                <img src={step.image} alt={step.title} loading="lazy" />
              </div>
            )}
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .project-process {
    background-color: var(--color-bg-primary);
    padding: 100px var(--space-20);
  }

  .project-process__container {
    max-width: 1440px;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    gap: var(--space-16);
  }

  .project-process__header {
    display: flex;
    flex-direction: column;
    gap: var(--space-4);
  }

  .project-process__label {
    font-family: var(--font-mono);
    font-size: var(--text-sm);
    font-weight: var(--font-semibold);
    color: var(--color-primary);
    letter-spacing: 2px;
  }

  .project-process__title {
    font-family: var(--font-sans);
    font-size: 40px;
    font-weight: var(--font-bold);
    color: var(--color-text-primary);
  }

  .project-process__subtitle {
    font-family: var(--font-sans);
    font-size: var(--text-lg);
    font-weight: var(--font-normal);
    color: var(--color-text-disabled);
  }

  .project-process__timeline {
    display: flex;
    flex-direction: column;
  }

  .project-process__step {
    display: flex;
    gap: var(--space-10);
  }

  .project-process__step-left {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100px;
    flex-shrink: 0;
  }

  .project-process__step-number {
    width: 48px;
    height: 48px;
    background-color: var(--color-primary);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .project-process__step-number span {
    font-family: var(--font-mono);
    font-size: var(--text-base);
    font-weight: var(--font-bold);
    color: var(--color-bg-primary);
  }

  .project-process__step-line {
    width: 2px;
    flex: 1;
    background-color: var(--color-surface);
    min-height: 120px;
  }

  .project-process__step-content {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: var(--space-4);
    padding-bottom: var(--space-10);
  }

  .project-process__step-content--last {
    padding-bottom: 0;
  }

  .project-process__step-title {
    font-family: var(--font-sans);
    font-size: 24px;
    font-weight: var(--font-semibold);
    color: var(--color-text-primary);
  }

  .project-process__step-desc {
    font-family: var(--font-sans);
    font-size: var(--text-base);
    font-weight: var(--font-normal);
    color: var(--color-text-muted);
    line-height: 1.7;
  }

  .project-process__step-image {
    height: 200px;
    border-radius: var(--radius-lg);
    overflow: hidden;
    margin-top: var(--space-2);
  }

  .project-process__step-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  @media (max-width: 1024px) {
    .project-process {
      padding: var(--space-16) var(--space-6);
    }

    .project-process__step-left {
      width: 60px;
    }

    .project-process__step {
      gap: var(--space-6);
    }
  }

  @media (max-width: 768px) {
    .project-process {
      padding: var(--space-12) var(--space-5);
    }

    .project-process__container {
      gap: var(--space-10);
    }

    .project-process__title {
      font-size: 1.75rem;
    }

    .project-process__subtitle {
      font-size: var(--text-base);
    }

    .project-process__step-left {
      width: 48px;
    }

    .project-process__step-number {
      width: 40px;
      height: 40px;
    }

    .project-process__step-number span {
      font-size: var(--text-sm);
    }

    .project-process__step {
      gap: var(--space-4);
    }

    .project-process__step-line {
      min-height: 80px;
    }

    .project-process__step-title {
      font-size: 18px;
    }

    .project-process__step-desc {
      font-size: var(--text-sm);
    }

    .project-process__step-image {
      height: 150px;
    }
  }
</style>
