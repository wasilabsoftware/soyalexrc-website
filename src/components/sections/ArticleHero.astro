---
import Breadcrumb from '../ui/Breadcrumb.astro';
import Tag from '../ui/Tag.astro';

interface Author {
  name: string;
  role: string;
  avatar?: string;
}

interface Props {
  title: string;
  description: string;
  date: string;
  readTime: string;
  tags: string[];
  author: Author;
  class?: string;
}

const {
  title,
  description,
  date,
  readTime,
  tags,
  author,
  class: className = '',
} = Astro.props;

const breadcrumbs = [
  { label: 'Home', href: '/' },
  { label: 'Blog', href: '/blog' },
  { label: 'Article', isActive: true },
];
---

<section class:list={['article-hero', className]}>
  <div class="article-hero__container">
    <Breadcrumb items={breadcrumbs} />

    <div class="article-hero__tags">
      {tags.map((tag) => (
        <Tag variant="accent" size="sm">{tag}</Tag>
      ))}
    </div>

    <h1 class="article-hero__title">{title}</h1>
    <p class="article-hero__description">{description}</p>

    <div class="article-hero__meta">
      <div class="article-hero__author">
        <div class="article-hero__avatar">
          {author.avatar ? (
            <img src={author.avatar} alt={author.name} />
          ) : (
            <span class="article-hero__avatar-placeholder"></span>
          )}
        </div>
        <div class="article-hero__author-info">
          <span class="article-hero__author-name">{author.name}</span>
          <span class="article-hero__author-role">{author.role}</span>
        </div>
      </div>

      <div class="article-hero__divider"></div>

      <div class="article-hero__date-info">
        <span class="article-hero__date">{date}</span>
        <span class="article-hero__read-time">{readTime}</span>
      </div>
    </div>
  </div>
</section>

<style>
  .article-hero {
    background-color: var(--color-bg-secondary);
    padding: var(--space-16) var(--space-20);
  }

  .article-hero__container {
    max-width: 880px;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-6);
  }

  .article-hero__tags {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: var(--space-2);
  }

  .article-hero__title {
    font-family: var(--font-sans);
    font-size: 48px;
    font-weight: var(--font-bold);
    color: var(--color-text-primary);
    line-height: 1.2;
    text-align: center;
  }

  .article-hero__description {
    font-family: var(--font-sans);
    font-size: var(--text-lg);
    font-weight: var(--font-normal);
    color: var(--color-text-muted);
    line-height: 1.6;
    text-align: center;
  }

  .article-hero__meta {
    display: flex;
    align-items: center;
    gap: var(--space-6);
    margin-top: var(--space-2);
  }

  .article-hero__author {
    display: flex;
    align-items: center;
    gap: var(--space-3);
  }

  .article-hero__avatar {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    overflow: hidden;
    background-color: var(--color-surface);
  }

  .article-hero__avatar img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .article-hero__avatar-placeholder {
    display: block;
    width: 100%;
    height: 100%;
    background-color: var(--color-surface);
  }

  .article-hero__author-info {
    display: flex;
    flex-direction: column;
    gap: 2px;
  }

  .article-hero__author-name {
    font-family: var(--font-sans);
    font-size: var(--text-sm);
    font-weight: var(--font-semibold);
    color: var(--color-text-primary);
  }

  .article-hero__author-role {
    font-family: var(--font-mono);
    font-size: 12px;
    font-weight: var(--font-normal);
    color: var(--color-text-disabled);
  }

  .article-hero__divider {
    width: 1px;
    height: 32px;
    background-color: var(--color-surface);
  }

  .article-hero__date-info {
    display: flex;
    gap: var(--space-4);
  }

  .article-hero__date,
  .article-hero__read-time {
    font-family: var(--font-mono);
    font-size: 13px;
    font-weight: var(--font-medium);
    color: var(--color-text-disabled);
  }

  @media (max-width: 1024px) {
    .article-hero {
      padding: var(--space-12) var(--space-6);
    }
  }

  @media (max-width: 768px) {
    .article-hero {
      padding: var(--space-8) var(--space-5);
    }

    .article-hero__container {
      gap: var(--space-4);
    }

    .article-hero__title {
      font-size: 1.75rem;
    }

    .article-hero__description {
      font-size: var(--text-base);
    }

    .article-hero__meta {
      flex-direction: column;
      gap: var(--space-4);
    }

    .article-hero__divider {
      display: none;
    }

    .article-hero__date-info {
      gap: var(--space-3);
    }

    .article-hero__date,
    .article-hero__read-time {
      font-size: 12px;
    }
  }
</style>
