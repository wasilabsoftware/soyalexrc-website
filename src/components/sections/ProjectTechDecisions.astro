---
interface TechDecisionItem {
  icon: string;
  title: string;
  description: string;
}

interface Props {
  label?: string;
  title: string;
  subtitle?: string;
  items: TechDecisionItem[];
  class?: string;
}

const {
  label = '// TECHNICAL DECISIONS',
  title,
  subtitle,
  items,
  class: className = '',
} = Astro.props;
---

<section class:list={['project-tech-decisions', className]}>
  <div class="project-tech-decisions__container">
    <div class="project-tech-decisions__header">
      <span class="project-tech-decisions__label">{label}</span>
      <h2 class="project-tech-decisions__title">{title}</h2>
      {subtitle && <p class="project-tech-decisions__subtitle">{subtitle}</p>}
    </div>

    <div class="project-tech-decisions__grid">
      {items.map((item) => (
        <div class="project-tech-decisions__card">
          <div class="project-tech-decisions__card-header">
            <div class="project-tech-decisions__icon">
              <span>{item.icon}</span>
            </div>
            <h3 class="project-tech-decisions__card-title">{item.title}</h3>
          </div>
          <p class="project-tech-decisions__card-desc">{item.description}</p>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .project-tech-decisions {
    background-color: var(--color-bg-secondary);
    padding: 100px var(--space-20);
  }

  .project-tech-decisions__container {
    max-width: 1440px;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    gap: var(--space-12);
  }

  .project-tech-decisions__header {
    display: flex;
    flex-direction: column;
    gap: var(--space-4);
  }

  .project-tech-decisions__label {
    font-family: var(--font-mono);
    font-size: var(--text-sm);
    font-weight: var(--font-semibold);
    color: var(--color-primary);
    letter-spacing: 2px;
  }

  .project-tech-decisions__title {
    font-family: var(--font-sans);
    font-size: 40px;
    font-weight: var(--font-bold);
    color: var(--color-text-primary);
  }

  .project-tech-decisions__subtitle {
    font-family: var(--font-sans);
    font-size: var(--text-lg);
    font-weight: var(--font-normal);
    color: var(--color-text-disabled);
  }

  .project-tech-decisions__grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: var(--space-8);
  }

  .project-tech-decisions__card {
    background-color: var(--color-surface);
    border-radius: var(--radius-lg);
    padding: var(--space-8);
    display: flex;
    flex-direction: column;
    gap: var(--space-5);
  }

  .project-tech-decisions__card-header {
    display: flex;
    align-items: center;
    gap: var(--space-4);
  }

  .project-tech-decisions__icon {
    width: 40px;
    height: 40px;
    background-color: rgba(34, 211, 238, 0.12);
    border-radius: var(--radius-md);
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 20px;
    flex-shrink: 0;
  }

  .project-tech-decisions__card-title {
    font-family: var(--font-sans);
    font-size: var(--text-lg);
    font-weight: var(--font-semibold);
    color: var(--color-text-primary);
  }

  .project-tech-decisions__card-desc {
    font-family: var(--font-sans);
    font-size: 15px;
    font-weight: var(--font-normal);
    color: var(--color-text-muted);
    line-height: 1.7;
  }

  @media (max-width: 1024px) {
    .project-tech-decisions {
      padding: var(--space-16) var(--space-6);
    }
  }

  @media (max-width: 768px) {
    .project-tech-decisions {
      padding: var(--space-12) var(--space-5);
    }

    .project-tech-decisions__container {
      gap: var(--space-8);
    }

    .project-tech-decisions__title {
      font-size: 1.75rem;
    }

    .project-tech-decisions__subtitle {
      font-size: var(--text-base);
    }

    .project-tech-decisions__grid {
      grid-template-columns: 1fr;
      gap: var(--space-4);
    }

    .project-tech-decisions__card {
      padding: var(--space-6);
      gap: var(--space-4);
    }

    .project-tech-decisions__card-title {
      font-size: var(--text-base);
    }

    .project-tech-decisions__card-desc {
      font-size: var(--text-sm);
    }
  }
</style>
