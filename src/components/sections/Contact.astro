---
import SectionHeader from '../ui/SectionHeader.astro';
import Button from '../ui/Button.astro';

interface SocialLink {
  name: string;
  icon: string;
  href: string;
}

interface Props {
  label?: string;
  title?: string;
  subtitle?: string;
  email?: {
    label: string;
    value: string;
  };
  location?: {
    label: string;
    value: string;
  };
  socialLinks?: SocialLink[];
  cta?: {
    text: string;
    href: string;
    icon?: string;
  };
}

const {
  label = '// CONTACT',
  title = "Let's Work Together",
  subtitle = "Have a project in mind? I'd love to hear about it.",
  email = { label: 'Email', value: 'hello@alexrodriguez.dev' },
  location = { label: 'Location', value: 'Remote ‚Äî Available Worldwide' },
  socialLinks = [
    { name: 'GitHub', icon: 'github', href: 'https://github.com' },
    { name: 'LinkedIn', icon: 'linkedin', href: 'https://linkedin.com' },
    { name: 'Twitter', icon: 'twitter', href: 'https://twitter.com' },
  ],
  cta = { text: 'Send Message', href: 'mailto:hello@alexrodriguez.dev', icon: '‚úâ' },
} = Astro.props;
---

<section class="contact" id="contact">
  <div class="contact__container">
    <SectionHeader label={label} title={title} subtitle={subtitle} align="center" />

    <div class="contact__content">
      <div class="contact__info">
        <div class="contact__row">
          <div class="contact__icon">‚úâ</div>
          <div class="contact__details">
            <span class="contact__label">{email.label}</span>
            <a href={`mailto:${email.value}`} class="contact__value contact__value--link">
              {email.value}
            </a>
          </div>
        </div>

        <div class="contact__row">
          <div class="contact__icon">üìç</div>
          <div class="contact__details">
            <span class="contact__label">{location.label}</span>
            <span class="contact__value">{location.value}</span>
          </div>
        </div>
      </div>

      <div class="contact__social">
        <span class="contact__social-label">// CONNECT</span>

        <div class="contact__social-icons">
          {socialLinks.map((link) => (
            <a
              href={link.href}
              class="contact__social-btn"
              aria-label={link.name}
              target="_blank"
              rel="noopener noreferrer"
            >
              <span class="contact__social-icon" data-icon={link.icon}>
                {link.icon === 'github' && (
                  <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                  </svg>
                )}
                {link.icon === 'linkedin' && (
                  <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
                  </svg>
                )}
                {link.icon === 'twitter' && (
                  <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
                  </svg>
                )}
              </span>
            </a>
          ))}
        </div>

        <Button variant="primary" data-modal-open="contact">
          {cta.icon && <span>{cta.icon}</span>}
          {cta.text}
        </Button>
      </div>
    </div>
  </div>
</section>

<style>
  .contact {
    background-color: var(--color-bg-secondary);
    padding: var(--space-20) var(--space-20);
  }

  .contact__container {
    max-width: 1440px;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    gap: var(--space-16);
  }

  .contact__content {
    display: flex;
    justify-content: center;
    gap: var(--space-20);
  }

  .contact__info {
    display: flex;
    flex-direction: column;
    gap: var(--space-8);
    width: 400px;
  }

  .contact__row {
    display: flex;
    align-items: center;
    gap: var(--space-4);
  }

  .contact__icon {
    width: 48px;
    height: 48px;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: var(--color-surface);
    border-radius: var(--radius-lg);
    font-size: 1.25rem;
    flex-shrink: 0;
  }

  .contact__details {
    display: flex;
    flex-direction: column;
    gap: 4px;
  }

  .contact__label {
    font-family: var(--font-mono);
    font-size: var(--text-xs);
    font-weight: var(--font-semibold);
    color: var(--color-text-muted);
    text-transform: uppercase;
  }

  .contact__value {
    font-family: var(--font-sans);
    font-size: var(--text-base);
    font-weight: var(--font-medium);
    color: var(--color-text-primary);
  }

  .contact__value--link {
    font-family: var(--font-mono);
    color: var(--color-primary);
    text-decoration: none;
    transition: var(--transition-fast);
  }

  .contact__value--link:hover {
    text-decoration: underline;
  }

  .contact__social {
    display: flex;
    flex-direction: column;
    gap: var(--space-6);
    width: 400px;
  }

  .contact__social-label {
    font-family: var(--font-mono);
    font-size: var(--text-xs);
    font-weight: var(--font-semibold);
    color: var(--color-text-muted);
    letter-spacing: 2px;
  }

  .contact__social-icons {
    display: flex;
    gap: var(--space-4);
  }

  .contact__social-btn {
    width: 56px;
    height: 56px;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: var(--color-surface);
    border-radius: var(--radius-lg);
    color: var(--color-text-primary);
    transition: var(--transition-base);
  }

  .contact__social-btn:hover {
    background-color: var(--color-primary);
    color: var(--color-bg-primary);
  }

  .contact__social-icon {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  @media (max-width: 1024px) {
    .contact {
      padding: var(--space-16) var(--space-6);
    }

    .contact__content {
      flex-direction: column;
      align-items: center;
      gap: var(--space-12);
    }

    .contact__info,
    .contact__social {
      width: 100%;
      max-width: 400px;
    }
  }

  @media (max-width: 768px) {
    .contact {
      padding: var(--space-12) var(--space-5);
      gap: var(--space-6);
    }

    .contact__content {
      gap: var(--space-6);
    }

    .contact__info {
      display: none;
    }

    .contact__social {
      align-items: center;
      text-align: center;
    }

    .contact__social-label {
      display: none;
    }

    .contact__social-icons {
      gap: var(--space-6);
    }

    .contact__social-btn {
      width: 40px;
      height: 40px;
    }

    .contact__social-btn svg {
      width: 18px;
      height: 18px;
    }
  }
</style>
