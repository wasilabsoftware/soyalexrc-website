---
interface ChallengeItem {
  icon: string;
  title: string;
  description: string;
}

interface Props {
  label?: string;
  title: string;
  subtitle?: string;
  items: ChallengeItem[];
  class?: string;
}

const {
  label = '// THE CHALLENGE',
  title,
  subtitle,
  items,
  class: className = '',
} = Astro.props;
---

<section class:list={['project-challenge', className]}>
  <div class="project-challenge__container">
    <div class="project-challenge__header">
      <span class="project-challenge__label">{label}</span>
      <h2 class="project-challenge__title">{title}</h2>
      {subtitle && <p class="project-challenge__subtitle">{subtitle}</p>}
    </div>

    <div class="project-challenge__cards">
      {items.map((item) => (
        <div class="project-challenge__card">
          <div class="project-challenge__icon">
            <span>{item.icon}</span>
          </div>
          <h3 class="project-challenge__card-title">{item.title}</h3>
          <p class="project-challenge__card-desc">{item.description}</p>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .project-challenge {
    background-color: var(--color-bg-secondary);
    padding: 100px var(--space-20);
  }

  .project-challenge__container {
    max-width: 1440px;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    gap: var(--space-12);
  }

  .project-challenge__header {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    gap: var(--space-4);
  }

  .project-challenge__label {
    font-family: var(--font-mono);
    font-size: var(--text-sm);
    font-weight: var(--font-semibold);
    color: var(--color-primary);
    letter-spacing: 2px;
  }

  .project-challenge__title {
    font-family: var(--font-sans);
    font-size: 40px;
    font-weight: var(--font-bold);
    color: var(--color-text-primary);
  }

  .project-challenge__subtitle {
    font-family: var(--font-sans);
    font-size: var(--text-lg);
    font-weight: var(--font-normal);
    color: var(--color-text-disabled);
  }

  .project-challenge__cards {
    display: flex;
    gap: var(--space-10);
  }

  .project-challenge__card {
    flex: 1;
    background-color: var(--color-surface);
    border-radius: var(--radius-lg);
    padding: var(--space-8);
    display: flex;
    flex-direction: column;
    gap: var(--space-5);
  }

  .project-challenge__icon {
    width: 56px;
    height: 56px;
    background-color: var(--color-bg-secondary);
    border-radius: var(--radius-lg);
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 24px;
  }

  .project-challenge__card-title {
    font-family: var(--font-sans);
    font-size: 20px;
    font-weight: var(--font-semibold);
    color: var(--color-text-primary);
  }

  .project-challenge__card-desc {
    font-family: var(--font-sans);
    font-size: 15px;
    font-weight: var(--font-normal);
    color: var(--color-text-muted);
    line-height: 1.7;
  }

  @media (max-width: 1024px) {
    .project-challenge {
      padding: var(--space-16) var(--space-6);
    }

    .project-challenge__cards {
      flex-direction: column;
      gap: var(--space-6);
    }
  }

  @media (max-width: 768px) {
    .project-challenge {
      padding: var(--space-12) var(--space-5);
    }

    .project-challenge__container {
      gap: var(--space-8);
    }

    .project-challenge__title {
      font-size: 1.75rem;
    }

    .project-challenge__subtitle {
      font-size: var(--text-base);
    }

    .project-challenge__card {
      padding: var(--space-6);
      gap: var(--space-4);
    }

    .project-challenge__icon {
      width: 48px;
      height: 48px;
      font-size: 20px;
    }

    .project-challenge__card-title {
      font-size: 18px;
    }

    .project-challenge__card-desc {
      font-size: var(--text-sm);
    }
  }
</style>
