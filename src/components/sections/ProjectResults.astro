---
interface StatItem {
  value: string;
  label: string;
}

interface Testimonial {
  quote: string;
  authorName: string;
  authorRole: string;
}

interface Props {
  label?: string;
  title: string;
  subtitle?: string;
  stats: StatItem[];
  testimonial?: Testimonial;
  class?: string;
}

const {
  label = '// RESULTS & IMPACT',
  title,
  subtitle,
  stats,
  testimonial,
  class: className = '',
} = Astro.props;
---

<section class:list={['project-results', className]}>
  <div class="project-results__container">
    <div class="project-results__header">
      <span class="project-results__label">{label}</span>
      <h2 class="project-results__title">{title}</h2>
      {subtitle && <p class="project-results__subtitle">{subtitle}</p>}
    </div>

    <div class="project-results__stats">
      {stats.map((stat) => (
        <div class="project-results__stat">
          <span class="project-results__stat-value">{stat.value}</span>
          <span class="project-results__stat-label">{stat.label}</span>
        </div>
      ))}
    </div>

    {testimonial && (
      <div class="project-results__testimonial">
        <span class="project-results__quote-icon">"</span>
        <p class="project-results__quote-text">{testimonial.quote}</p>
        <div class="project-results__author">
          <span class="project-results__author-name">{testimonial.authorName}</span>
          <span class="project-results__author-role">{testimonial.authorRole}</span>
        </div>
      </div>
    )}
  </div>
</section>

<style>
  .project-results {
    background-color: var(--color-bg-primary);
    padding: 100px var(--space-20);
  }

  .project-results__container {
    max-width: 1440px;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    gap: var(--space-16);
  }

  .project-results__header {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    gap: var(--space-4);
  }

  .project-results__label {
    font-family: var(--font-mono);
    font-size: var(--text-sm);
    font-weight: var(--font-semibold);
    color: var(--color-primary);
    letter-spacing: 2px;
  }

  .project-results__title {
    font-family: var(--font-sans);
    font-size: 40px;
    font-weight: var(--font-bold);
    color: var(--color-text-primary);
  }

  .project-results__subtitle {
    font-family: var(--font-sans);
    font-size: var(--text-lg);
    font-weight: var(--font-normal);
    color: var(--color-text-disabled);
  }

  .project-results__stats {
    display: flex;
    justify-content: center;
    gap: var(--space-8);
  }

  .project-results__stat {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-2);
    width: 200px;
  }

  .project-results__stat-value {
    font-family: var(--font-mono);
    font-size: 56px;
    font-weight: var(--font-bold);
    color: var(--color-primary);
    line-height: 1;
  }

  .project-results__stat-label {
    font-family: var(--font-sans);
    font-size: var(--text-base);
    font-weight: var(--font-normal);
    color: var(--color-text-muted);
  }

  .project-results__testimonial {
    background-color: var(--color-surface);
    border-radius: var(--radius-xl);
    padding: var(--space-12);
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-6);
  }

  .project-results__quote-icon {
    font-family: var(--font-sans);
    font-size: 80px;
    color: var(--color-primary);
    line-height: 0.5;
  }

  .project-results__quote-text {
    font-family: var(--font-sans);
    font-size: 20px;
    font-style: italic;
    font-weight: var(--font-normal);
    color: var(--color-text-primary);
    line-height: 1.7;
    text-align: center;
    max-width: 800px;
  }

  .project-results__author {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-1);
  }

  .project-results__author-name {
    font-family: var(--font-sans);
    font-size: var(--text-base);
    font-weight: var(--font-semibold);
    color: var(--color-text-primary);
  }

  .project-results__author-role {
    font-family: var(--font-sans);
    font-size: var(--text-sm);
    font-weight: var(--font-normal);
    color: var(--color-text-disabled);
  }

  @media (max-width: 1024px) {
    .project-results {
      padding: var(--space-16) var(--space-6);
    }

    .project-results__stats {
      flex-wrap: wrap;
    }

    .project-results__stat {
      width: calc(50% - var(--space-4));
    }

    .project-results__stat-value {
      font-size: 40px;
    }
  }

  @media (max-width: 768px) {
    .project-results {
      padding: var(--space-12) var(--space-5);
    }

    .project-results__container {
      gap: var(--space-10);
    }

    .project-results__title {
      font-size: 1.75rem;
    }

    .project-results__subtitle {
      font-size: var(--text-base);
    }

    .project-results__stats {
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      gap: var(--space-6);
    }

    .project-results__stat {
      width: 100%;
    }

    .project-results__stat-value {
      font-size: 32px;
    }

    .project-results__stat-label {
      font-size: var(--text-sm);
    }

    .project-results__testimonial {
      padding: var(--space-8);
      gap: var(--space-4);
    }

    .project-results__quote-icon {
      font-size: 48px;
    }

    .project-results__quote-text {
      font-size: var(--text-base);
    }
  }
</style>
