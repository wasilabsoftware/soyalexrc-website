---
import SectionHeader from '../ui/SectionHeader.astro';
import Button from '../ui/Button.astro';
import Card from '../ui/Card.astro';
import Tag from '../ui/Tag.astro';

interface BlogPost {
  title: string;
  description: string;
  date: string;
  readTime: string;
  image?: string;
  tags: string[];
  href: string;
}

interface Props {
  label?: string;
  title?: string;
  subtitle?: string;
  viewAllText?: string;
  viewAllHref?: string;
  items?: BlogPost[];
}

const {
  label = '// BLOG',
  title = 'Latest Articles',
  subtitle = 'Thoughts, tutorials, and insights on web development',
  viewAllText = 'View All Posts',
  viewAllHref = '/blog',
  items = [],
} = Astro.props;
---

<section class="blog" id="blog">
  <div class="blog__container">
    <div class="blog__header">
      <SectionHeader label={label} title={title} subtitle={subtitle} align="left" />
      <Button variant="ghost" href={viewAllHref}>
        {viewAllText}
        <span>→</span>
      </Button>
    </div>

    <div class="blog__grid">
      {items.map((post) => (
        <a href={post.href} class="blog__card-link">
          <Card variant="blog">
            {post.image && (
              <div class="blog__card-image" slot="image">
                <img src={post.image} alt={post.title} loading="lazy" />
              </div>
            )}
            {!post.image && (
              <div class="blog__card-placeholder" slot="image"></div>
            )}

            <div class="blog__card-meta">
              <span>{post.date}</span>
              <span class="blog__card-divider">•</span>
              <span>{post.readTime}</span>
            </div>

            <h3 class="blog__card-title">{post.title}</h3>
            <p class="blog__card-desc">{post.description}</p>

            <div class="blog__card-tags">
              {post.tags.map((tag) => (
                <Tag variant="accent" size="sm">{tag}</Tag>
              ))}
            </div>
          </Card>
        </a>
      ))}
    </div>
  </div>
</section>

<style>
  .blog {
    background-color: var(--color-bg-primary);
    padding: var(--space-20) var(--space-20);
  }

  .blog__container {
    max-width: 1440px;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    gap: var(--space-16);
  }

  .blog__header {
    display: flex;
    justify-content: space-between;
    align-items: flex-end;
    gap: var(--space-8);
  }

  .blog__grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--space-6);
  }

  .blog__card-link {
    text-decoration: none;
    display: block;
  }

  .blog__card-image {
    height: 180px;
    overflow: hidden;
  }

  .blog__card-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: var(--transition-slow);
  }

  .blog__card-link:hover .blog__card-image img {
    transform: scale(1.05);
  }

  .blog__card-placeholder {
    height: 180px;
    background-color: var(--color-bg-secondary);
  }

  .blog__card-meta {
    display: flex;
    align-items: center;
    gap: var(--space-3);
    font-family: var(--font-mono);
    font-size: var(--text-xs);
    font-weight: var(--font-medium);
    color: var(--color-text-muted);
  }

  .blog__card-divider {
    color: var(--color-text-disabled);
  }

  .blog__card-title {
    font-family: var(--font-sans);
    font-size: 1.25rem;
    font-weight: var(--font-semibold);
    color: var(--color-text-primary);
    line-height: 1.4;
    transition: var(--transition-fast);
  }

  .blog__card-link:hover .blog__card-title {
    color: var(--color-primary);
  }

  .blog__card-desc {
    font-family: var(--font-sans);
    font-size: var(--text-sm);
    color: var(--color-text-secondary);
    line-height: var(--leading-normal);
  }

  .blog__card-tags {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-2);
  }

  @media (max-width: 1024px) {
    .blog {
      padding: var(--space-16) var(--space-6);
    }

    .blog__header {
      flex-direction: column;
      align-items: flex-start;
    }

    .blog__grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 640px) {
    .blog {
      padding: var(--space-12) var(--space-5);
      gap: var(--space-6);
    }

    .blog__grid {
      grid-template-columns: 1fr;
    }

    .blog__card-image,
    .blog__card-placeholder {
      height: 140px;
    }

    .blog__card-meta {
      font-size: 10px;
    }

    .blog__card-title {
      font-size: var(--text-base);
    }

    .blog__card-desc {
      display: none;
    }
  }
</style>
