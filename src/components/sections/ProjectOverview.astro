---
interface Props {
  label?: string;
  title: string;
  paragraphs: string[];
  techStack: string[];
  class?: string;
}

const {
  label = '// PROJECT OVERVIEW',
  title,
  paragraphs,
  techStack,
  class: className = '',
} = Astro.props;
---

<section class:list={['project-overview', className]}>
  <div class="project-overview__container">
    <div class="project-overview__header">
      <span class="project-overview__label">{label}</span>
      <h2 class="project-overview__title">{title}</h2>
    </div>

    <div class="project-overview__content">
      <div class="project-overview__paragraphs">
        {paragraphs.map((paragraph) => (
          <p class="project-overview__paragraph">{paragraph}</p>
        ))}
      </div>

      <div class="project-overview__tech-card">
        <h3 class="project-overview__tech-title">Tech Stack</h3>
        <ul class="project-overview__tech-list">
          {techStack.map((tech) => (
            <li class="project-overview__tech-item">
              <span class="project-overview__tech-dot"></span>
              <span class="project-overview__tech-text">{tech}</span>
            </li>
          ))}
        </ul>
      </div>
    </div>
  </div>
</section>

<style>
  .project-overview {
    background-color: var(--color-bg-primary);
    padding: 100px var(--space-20);
  }

  .project-overview__container {
    max-width: 1440px;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    gap: var(--space-12);
  }

  .project-overview__header {
    display: flex;
    flex-direction: column;
    gap: var(--space-4);
  }

  .project-overview__label {
    font-family: var(--font-mono);
    font-size: var(--text-sm);
    font-weight: var(--font-semibold);
    color: var(--color-primary);
    letter-spacing: 2px;
  }

  .project-overview__title {
    font-family: var(--font-sans);
    font-size: 40px;
    font-weight: var(--font-bold);
    color: var(--color-text-primary);
  }

  .project-overview__content {
    display: flex;
    gap: var(--space-20);
  }

  .project-overview__paragraphs {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: var(--space-6);
  }

  .project-overview__paragraph {
    font-family: var(--font-sans);
    font-size: var(--text-base);
    font-weight: var(--font-normal);
    color: var(--color-text-muted);
    line-height: 1.8;
  }

  .project-overview__tech-card {
    width: 400px;
    flex-shrink: 0;
    background-color: var(--color-surface);
    border-radius: var(--radius-lg);
    padding: var(--space-6);
    display: flex;
    flex-direction: column;
    gap: var(--space-5);
  }

  .project-overview__tech-title {
    font-family: var(--font-sans);
    font-size: var(--text-lg);
    font-weight: var(--font-semibold);
    color: var(--color-text-primary);
  }

  .project-overview__tech-list {
    list-style: none;
    display: flex;
    flex-direction: column;
    gap: var(--space-3);
  }

  .project-overview__tech-item {
    display: flex;
    align-items: center;
    gap: var(--space-3);
  }

  .project-overview__tech-dot {
    width: 6px;
    height: 6px;
    background-color: var(--color-primary);
    border-radius: 50%;
    flex-shrink: 0;
  }

  .project-overview__tech-text {
    font-family: var(--font-mono);
    font-size: var(--text-sm);
    font-weight: var(--font-normal);
    color: var(--color-text-muted);
  }

  @media (max-width: 1024px) {
    .project-overview {
      padding: var(--space-16) var(--space-6);
    }

    .project-overview__content {
      flex-direction: column;
      gap: var(--space-10);
    }

    .project-overview__tech-card {
      width: 100%;
    }
  }

  @media (max-width: 768px) {
    .project-overview {
      padding: var(--space-12) var(--space-5);
    }

    .project-overview__container {
      gap: var(--space-8);
    }

    .project-overview__title {
      font-size: 1.75rem;
    }

    .project-overview__paragraph {
      font-size: var(--text-sm);
    }

    .project-overview__tech-card {
      padding: var(--space-5);
    }
  }
</style>
